UID:{{ vacation.vacation_id }}@holiday.kozea.fr
DTSTART:{{ day }}T{{ start }}Z
DTEND:{{ day }}T{{ end }}Z
SUMMARY:{{ vacation.slot.person }} absent(e) {{ 'matin' if vacation.part == 'am' else 'apr√®s-midi' }}
DESCRIPTION:{{ vacation.slot.name }}
END:VEVENT
{%- endfor %}
END:VCALENDAR
